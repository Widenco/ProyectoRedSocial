@model AppRedSocial.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-sm p-4">
            <h2 class="text-center mb-4">Recuperar contraseña</h2>

            <form asp-action="ForgotPassword" asp-controller="Auth" method="post" novalidate>
                <p class="small text-muted">Introduce tu correo y te enviaremos instrucciones para restablecer la contraseña.</p>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Enviar instrucciones</button>

                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Auth">Volver al inicio de sesión</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
